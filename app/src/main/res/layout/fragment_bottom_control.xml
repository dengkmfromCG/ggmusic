<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.gdut.dkmfromcg.ggmusic.ui.fragment.BottomControlFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/bottomPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottomSheetNormalBackground"
        android:orientation="vertical">

        <LinearLayout
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.qmuiteam.qmui.widget.QMUIViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/vpNextLastMusic"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivPlayOrStopMusic"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/bot_ivplaymusic"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/ivOpenPlayList"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/bot_ivplaylist"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
